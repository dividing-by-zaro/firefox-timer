{
  "manifest_version": 2,
  "name": "Tab Timer",
  "version": "1.0.0",
  "description": "Set a timer to automatically close the current tab. Choose between countdown or specific end time.",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Tab Timer",
    "default_icon": {
      "48": "assets/icon-48.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "window-closer-timer@example.com",
      "strict_min_version": "57.0"
    }
  }
}
